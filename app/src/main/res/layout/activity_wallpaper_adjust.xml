<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Zoomable image view for wallpaper adjustment -->
    <com.simplelauncher.ZoomableImageView
        android:id="@+id/wallpaperPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Wallpaper preview" />

    <!-- Control buttons at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#AA000000"
        android:padding="16dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:backgroundTint="#555555"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/setButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set"
            android:textColor="#FFFFFF"
            android:backgroundTint="#006400"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Instructions text at top -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="Pinch to zoom â€¢ Drag to pan"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:padding="16dp"
        android:gravity="center"
        android:background="#AA000000" />

</FrameLayout>
