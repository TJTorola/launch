<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.torola.launch">

    <!-- Required to query and list all installed apps on Android 11+ -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- Required to receive shortcut install requests -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <!-- Required to bind widgets -->
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />

    <!-- Required to request package deletion on Android 8.0+ (API 26+) -->
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />

    <!-- Optional: For accessing images on Android 13+ (API 33+) -->
    <!-- Note: Not strictly required since we use persistable URI permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Required to access system wallpaper on older Android versions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <application
        android:name=".LaunchApplication"
        android:allowBackup="true"
        android:label="Launch"
        android:supportsRtl="true"
        android:theme="@style/Theme.Launch">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- This makes the app show up as a launcher option -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        
        <!-- Settings activity for managing shortcuts -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch" />
        
        <!-- Widget management activity -->
        <activity
            android:name=".WidgetManagementActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch" />
        
        <!-- Widget picker activity -->
        <activity
            android:name=".WidgetPickerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch" />

        <!-- Shortcut management activity -->
        <activity
            android:name=".ShortcutManagementActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch" />

        <!-- Hidden apps management activity -->
        <activity
            android:name=".HiddenAppsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch" />

        <!-- App options activity -->
        <activity
            android:name=".AppOptionsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch" />

        <!-- Activity for handling pinned shortcut requests (Android 8.0+) -->
        <activity
            android:name=".PinShortcutActivity"
            android:exported="true"
            android:excludeFromRecents="true"
            android:autoRemoveFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Launch">
            <intent-filter>
                <action android:name="android.content.pm.action.CONFIRM_PIN_SHORTCUT" />
            </intent-filter>
        </activity>
        
        <!-- Broadcast receiver for legacy shortcut installation requests -->
        <receiver
            android:name=".ShortcutReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.android.launcher.action.INSTALL_SHORTCUT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
