<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch Settings"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp" />
    
    <!-- Wallpaper selection buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">
        
        <Button
            android:id="@+id/selectWallpaperButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Wallpaper"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:layout_marginEnd="8dp" />
        
        <Button
            android:id="@+id/clearWallpaperButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear Wallpaper"
            android:textColor="#FFFFFF"
            android:backgroundTint="#555555"
            android:layout_marginStart="8dp" />
    </LinearLayout>
    
    <!-- Widget Management Button -->
    <Button
        android:id="@+id/manageWidgetsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Manage Widgets"
        android:textColor="#FFFFFF"
        android:backgroundTint="#444444" />

    <!-- Shortcuts Management Button -->
    <Button
        android:id="@+id/manageShortcutsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Manage Shortcuts"
        android:textColor="#FFFFFF"
        android:backgroundTint="#444444" />

    <!-- Hidden Apps Management Button -->
    <Button
        android:id="@+id/manageHiddenAppsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Manage Hidden Apps"
        android:textColor="#FFFFFF"
        android:backgroundTint="#444444" />

    <!-- Widget Edit Mode Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Widget Edit Mode"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/widgetEditModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
